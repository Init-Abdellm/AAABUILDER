modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AAAB CLI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "aaab_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AAAB HTTP Server"

[[workflows.workflow]]
name = "AAAB CLI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && node bin/aaab.js run examples/hello.agent --input '{\"name\":\"Replit User\"}' --debug"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "aaab_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && node bin/aaab.js run examples/hello.agent --input '{\"name\":\"Alex\"}' --debug"

[[workflows.workflow]]
name = "AAAB HTTP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node bin/aaab.js serve --port 5000 --agents-dir ./agents --watch"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

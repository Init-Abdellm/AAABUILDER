@agent hello-world v1
trigger http POST /hello
secret OLLAMA_URL=env:OLLAMA_URL
var name = input.name

step greet:
  kind llm
  model qwen2
  provider ollama
  prompt """
    Hello {name}, please provide a friendly greeting and one helpful tip for today.
  """
  retries 3
  timeout_ms 30000
  save greeting

output greeting
@end

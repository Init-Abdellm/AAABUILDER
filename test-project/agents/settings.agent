@agent settings v1
description: "Agent configuration and settings"
trigger:
  type: http
  method: POST
  path: /settings

vars:
  action:
    type: string
    from: input
    required: true
  data:
    type: object
    from: input
    default: {}

steps:
  - id: process
    type: http
    action: GET
    url: "https://httpbin.org/json"
    headers:
      Content-Type: "application/json"
    outputs:
      response: body

outputs:
  result: "{response}"
@end